# set PATH
PATH=/usr/local/bin:$PATH
PATH=/usr/local/share/npm/bin:$PATH
PATH=$HOME/.dot/bin:$PATH
export PATH

# set editors
export EDITOR=vim
export VISUAL=vim

# set nosetests
export NOSE_REDNOSE=1

#virtualenvwrapper
export WORKON_HOME=~/Envs
mkdir -p $WORKON_HOME
source /usr/local/bin/virtualenvwrapper.sh

if [ -f ~/.bash_profile ]; then
    source ~/.bash_profile
fi
